<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	<% for my $entry (@{ $r->stash->{page}->entries }) { %>
	<url>
		<loc><%= $r->uri_for($entry->path) %></loc>
		<lastmod><%= $entry->modified_at->strftime('%Y-%m-%d') %></lastmod>
	</url> 
	<% } %>
</urlset>
